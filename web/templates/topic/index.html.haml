%h5 Topics

%ul.collection
  = for topic <- @topics do
    %li.collection-item
      = topic.title
      .right
        = link "Edit", to: topic_path(@conn, :edit, topic)
        = link "Delete", to: topic_path(@conn, :delete, topic), method: :delete, class: "red-text"

.fixed-action-btn
   = link to: topic_path(@conn, :new), class: "btn-floating btn-large wave-effect wave-light red" do
    %i.material-icons add
